{% extends 'base.html.twig' %}

{% block body %}
<div class="div_tournaments">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4"><a style="text-decoration:none" href="{{ path('tournaments',{'platform':'todos'})}}">Juegos:</a> {{game.name_normalized}}</h1>
            <h2><i class="fab fa-{{ game.platform|lower}}"></i> {{game.platform}}</h2>
        {% if is_granted('ROLE_MOD') %}
        <p class="lead">    
            <a type="button" class="btn btn-primary" href="{{ path('new_tournament',{'game_name':game.name}) }}">Nuevo torneo</a>
        </p>
        {% endif %}
        </div>
    </div>
    <div class="div_table">
    <table id="example" class="table table-hover table-responsive-sm" style="width:100%">
        <thead class="thead-dark tournaments_table_head">
            <tr>
                <th scope="col">Nombre</th>
                <th class="center_column" scope="col">Tipo</th>
                <th class="center_column" scope="col">Fecha y hora</th>
                <th class="center_column" scope="col">Participantes requeridos</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="tournaments_table_body">
            {% if tournaments is defined and tournaments is not null %}
            {% for tournament in tournaments %}
            <tr>
                <td class="vertical_align_column">{{ tournament.name }}</td>
                <td class="center_column vertical_align_column">{{ tournament.type|capitalize }}</td>
                <td class="center_column vertical_align_column">{{ tournament.datetime|date('d-m-Y h:i') }}</td>
                <td class="center_column vertical_align_column">{{ tournament.participantsMin }}</td>
                <td class="center_column"><a type="button" href="{{ path('tournament_info', {'game_name': game.name, 'id_tournament': tournament.id}) }}" class="btn btn-primary">Ver detalles</a></td>
            </tr>
            {% endfor %}
            {% else %}
            No existen torneos para este juego
            {% endif %}
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            {% if currentPage == 1 %}
            <li class="page-item disabled">
            {% else %}
            <li class="page-item">
            {% endif %}
            <a class="page-link" href="{{ path('game', {'game_name':game.name, 'page': (currentPage -1)}) }}" aria-label="Previous">
                Anterior
            </a>
            </li>
            {% for i in 1..pagesCount %}
                {% if currentPage == i %}
                <li class="page-item active">
                {% else %}
                <li class="page-item">
                {% endif %}
                <a class="page-link" href="{{ path('game', {'game_name':game.name, 'page': i}) }}">{{ i }}</a></li>
            {% endfor %}
            {% if currentPage == pagesCount %}
            <li class="page-item disabled">
            {% else %}
            <li class="page-item">
            {% endif %}
            <a class="page-link" href="{{ path('game', {'game_name':game.name, 'page': (currentPage +1)}) }}" aria-label="Next">
                Siguiente
            </a>
            </li>
        </ul>
    </nav>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript"> 

    </script>
{% endblock %}