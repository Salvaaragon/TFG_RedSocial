{% extends 'base_index.html.twig' %}

{% block body %}
<section class="login_block">
    <div class="container global_panel">
        <div class="row">
            <div class="col-md-8 left_panel">
                <div class="left_panel_text">
                    <h2 class="web_title">GAMING TOGETHER</h2>
                    <ul class="list_title">
                        <li><i class="fas fa-gamepad"></i> Juega con otros</li>
                        <li><i class="fas fa-trophy"></i> Participa en torneos y conviértete en el mejor</li>
                        <li><i class="fas fa-globe-americas"></i> Conecta con los mejores jugadores</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 right_panel">
                <h2 class="text-center">INICIAR SESIÓN</h2>
                <form class="login-form" action="{{ path('index') }}" method="post">
                    <div class="form-group">
                        <input type="text" id="username" name="_username" class="form-control" placeholder="Nombre de usuario o email" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="button_div">
                        <button type="button submit" class="btn btn-info btn-block">Iniciar sesión</button>
                    </div>
                </form>
                    <div class="button_div">
                        <button type="button" class="btn btn-success btn-block">Recuperar contraseña</button>
                    </div>
                    <div class="button_div">
                        <button type="button" onclick="window.location.href = '{{ path('register') }}'" class="btn btn-danger btn-block">Nuevo usuario</button>
                    </div>
                <div class="right_panel_footer">
                    Realizado por Salvador Aragón Reyes <br>
                    <a href="https://github.com/salvaaragon"><i class="fab fa-github"></i></a>
                    <a href="https://twitter.com/salvaragonreyes"><i class="fab fa-twitter"></i></a>
                    <a href="https://es.linkedin.com/in/salvador-aragón-reyes"><i class="fab fa-linkedin"></i></a>
                    <a href="https://xboxgamertag.com/search/salvaaragon/"><i class="fab fa-xbox"></i></a>
                    <a href="https://steamcommunity.com/id/manteca_prima"><i class="fab fa-steam"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %} 