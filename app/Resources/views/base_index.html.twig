<!DOCTYPE html>
<html>
    {% include 'layout/header.html.twig' %}

    <body>
        {% block flash_messages %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible flash_message_index" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        {{ message | raw }}
                    </div>   
                {% endfor %}
            {% endfor %}
        {% endblock %}
        {% block error_login %}
            {% if error %}
                <div class="alert alert-danger alert-dismissible flash_message_index">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    {{ error.messageKey|trans(error.messageData, 'security')|replace({"Invalid credentials." : "El nombre de usuario o la contrase√±a son incorrectos."}) }}
                </div>
            {% endif %}
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %} 
        
    </body>
</html>