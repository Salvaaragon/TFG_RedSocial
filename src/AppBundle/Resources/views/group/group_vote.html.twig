{% extends 'base.html.twig' %}

{% block body %}

<div class="div_tournaments">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Votaciones</h1>
            <h2>{{group.game}}</h2>
            <h3>LÃ­der: {{group.user}}</h3>
            <h4>Fecha inicio: {{group.datetime}}</h4>
        </div>
    </div>
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-header">
                <h5>Votar</h5>
            </div>
            <div class="card-body">
            <form id="form_send_vote" action="{{path('save_vote')}}" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                <input id="game_group_id" name="game_group_id" type="hidden" value="{{ group.id }}" readonly>
                {% for part in participants %}
                    <label for="select_{{part.username}}" class="col-sm-2 col-form-label">{{part.username}}</label>
                    <div class="col-sm-10">
                    <select class="form-control" name="select_{{part.username}}" id="select_{{part.username}}" required>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                    </div>
                    <br>
                {% endfor %}
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}