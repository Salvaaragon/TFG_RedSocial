{% extends 'base.html.twig' %}

{% block body %}
<div class="div_tournaments">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4"><i class="fas fa-newspaper"></i> Panel de noticias</h1>
            <p>Aquí se recogen las noticias diarias, acerca de videojuegos, de diversas fuentes</p>
        </div>
    </div>

    <div class="col-lg-10 offset-lg-1">
    {% if num_news > 0 %}
        {% for item in rss %}
            <div class="card">
                <div class="card-body">
                        <h4>{{ item.title }}</h4>
                        <h5>{{ item.desc|length > 100 ? item.desc|slice(0, 100) ~ '...' : item.desc }}</h5>
                        <p>Fecha de publicación: {{item.date}}</p>
                        <a href="{{item.link}}">Acceder a la noticia</a>
                </div>
            </div>
            <br>
        {% endfor %}
    {% else %}
        <div class="card">
            <div class="card-body">
                No existen noticias sobre videojuegos para el día de hoy
            </div>
        </div>
    {% endif %}
    </div>
</div>

{% endblock %}
